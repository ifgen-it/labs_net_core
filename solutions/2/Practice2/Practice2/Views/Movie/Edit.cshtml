@model Practice2.Domain.Entities.Movie

@{
    //Layout = null;
    ViewData["Title"] = "Edit movie";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Movie</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" type="text" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label"></label>
                    <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                </div>
            </form>

            @* edit foto *@
            <form asp-action="AddFoto" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <label class="control-label">JPG foto, less than 5 MB</label>
                    <input type="file" name="uploadedFile" class="form-control-file" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload" class="btn btn-outline-primary" />
                </div>
            </form>
            <a class="btn btn-outline-primary" asp-action="DeleteFoto" asp-route-id="@Model.Id">
                Delete foto
            </a>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a> |
        <a asp-action="Index">All movies</a>
    </div>

</body>
</html>

